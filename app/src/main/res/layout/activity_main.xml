<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:isScrollContainer="true"
            android:paddingBottom="16dp">>


            <Button
                android:id="@+id/in_hasMinorsRecognition"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="检测设备是否支持儿童识别"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/in_getMinorsRecognitionApiTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="获取儿童识别版本号"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/in_enableAndGetResult1000"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="注册儿童识别并获取识别结果 1000ms"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/in_enableAndGetResult1500"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="注册儿童识别并获取识别结果 1500ms"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/in_enableAndGetResult2000"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="注册儿童识别并获取识别结果 2000ms"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/in_disableRecognition"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="解注册儿童识别"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/id_FaceRecognitionInit"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="初始化人脸识别" />

            <Button
                android:id="@+id/id_FaceRecognition_DoAuth"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="开始人脸识别" />
            <Button
                android:id="@+id/id_FaceRecognition_CancelAuth"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="取消人脸识别" />


        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="识别结果：判断是儿童的概率，范围 [0, 1]"
        android:textSize="18sp"
        android:textColor="#000000" />

</LinearLayout>
